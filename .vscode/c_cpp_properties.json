{
    "configurations": [
        {
            "name": "Pico",
            "includePath": [
                "${workspaceFolder}/**",
                "${userHome}/.pico-sdk/sdk/1.5.1/**",
                "/usr/include"
            ],
            "forcedInclude": [
                // Força a inclusão do arquivo pico.h, necessário para o funcionamento básico do Pico SDK
                "${userHome}/.pico-sdk/sdk/1.5.1/src/common/pico_base/include/pico.h",
                // Inclui automaticamente o arquivo de configurações gerado pelo CMake para o SDK
                "${workspaceFolder}/build/generated/pico_base/pico/config_autogen.h"
            ],
            "defines": [
                "PICO_PLATFORM=rp2040"
            ],
            "compilerPath": "${userHome}/.pico-sdk/toolchain/13_2_Rel1/bin/arm-none-eabi-gcc",
            "compileCommands": "${workspaceFolder}/build/compile_commands.json",
            "cStandard": "c17",
            "cppStandard": "c++14",
            "intelliSenseMode": "gcc-arm"
        }
    ],
    "version": 4
}
